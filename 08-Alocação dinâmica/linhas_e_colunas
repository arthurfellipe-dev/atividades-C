#include <stdio.h>
#include <stdlib.h>

int main() {
    int linhas, coluna, **p;

    printf("entre com a quantidade de linhas e coluna\n");
    scanf("%d %d", &linhas, &coluna);

    p = (int**) malloc(linhas * sizeof(int*));

    if (p == NULL) {
        printf("Erro ao alocar memoria");
        return 1;
    }

    for (int i = 0; i < linhas; i++) {
        p[i] = (int*) malloc(coluna * sizeof(int));

        if (p[i] == NULL) {
            printf("Erro ao alocar memoria");
            return 2;
        }
    }

    for (int i = 0; i < linhas; i++) {
        for (int j = 0; j < coluna; j++) {
            p[i][j] = i + j;
        }
    }

    for (int i = 0; i < linhas; i++) {
        for (int j = 0; j < coluna; j++) {
            printf("%d ", p[i][j]);
        }
    }

    for (int i = 0; i < linhas; i++)
        free(p[i]);
    free(p);

    return 0;
}
