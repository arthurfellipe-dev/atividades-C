#include <stdio.h>
#define MAX_PROD 50
struct prod {
    float valor;
    char descricao[100];
};
int main(void) {
    struct prod produto[MAX_PROD];
    for (int i = 0; i < MAX_PROD; i++) {
        scanf("%f", &produto[i].valor);
        getchar();
        fgets(produto[i].descricao, sizeof(produto[i].descricao), stdin);
    }
    for (int i = MAX_PROD - 1; i >= 0; i--) {
        printf("\nProduto %d: \n", i + 1);
        printf("\n\tValor = %.2f\n", produto[i].valor);
        printf("\n\tDescricao = %s\n", produto[i].descricao);
    }
    return 0;
}
